{{#each this}}
<li class="gallery__card">
  <article id={{id}}>
    {{#if poster_path}}
          <div class="gallery__card-thumb">
          <img
            class="gallery__image"
            src='https://image.tmdb.org/t/p/w500{{poster_path}}'
            alt='{{title}}'
          />
        {{else}}
          <img
            src='https://i.ibb.co/kQLqyLM/movie-850.png'
            alt='no_poster'
          />
        {{/if}}
      </div>
    <div class="gallery__card-caption">
      <h2 class="gallery__title">{{title}}</h2>
      <p class="gallery__text">
        {{#each genres}}
        {{name}} 
        {{/each}}
        <span class="gallery__year">| {{year}}</span>
        <span class="gallery__card-rating">{{vote_average}}</span>
      </p>
     </div>
  </article>   
</li>
  
{{/each}}